generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  password  String
  salt      String
  createdAt DateTime @default(now())
  emailVerified DateTime?
}

model VerificationToken {
  id        Int @id @default(autoincrement())
  email     String
  token     String
  expires   DateTime

  @@unique([email, token])
}